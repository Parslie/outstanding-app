<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/outer_margin"
        android:orientation="vertical"
        tools:context=".ui.view.PostCreationActivity">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/postCreation_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/title_input"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/inner_margin">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/postCreation_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/content_input"
                android:singleLine="false" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/inner_margin_big"
            android:orientation="horizontal">

            <Button
                android:id="@+id/postCreation_backBtn"
                style="@style/Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/inner_margin"
                android:layout_weight="1"
                android:text="@string/back" />

            <Button
                android:id="@+id/postCreation_postBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/post" />
        </LinearLayout>
    </LinearLayout>
</layout>