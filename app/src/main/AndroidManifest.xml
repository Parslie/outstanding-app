<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vikho305.isaho220.outstanding">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.FollowingActivity"/>
        <activity android:name=".activity.FollowerActivity"/>
        <activity android:name=".activity.LockedProfileActivity"/>
        <activity android:name=".activity.MapActivity"/>
        <activity android:name=".ui.user.EditProfileActivity"/>
        <activity android:name=".ui.user.ProfileActivity"/>
        <activity android:name=".activity.RegisterActivity"/>
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>